<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedCornerImageView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="cornerRadius" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="CircularProgressBar">
        <attr name="progressColor" format="color"/>
        <attr name="progressWidth" format="integer"/>
        <attr name="android:textColor" format="color"/>
        <attr name="showProgressText" format="boolean"/>
        <attr name="useRoundedCorner" format="boolean"/>
    </declare-styleable>
</resources>